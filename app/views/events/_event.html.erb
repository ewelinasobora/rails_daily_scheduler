<li class="list-group-item d-flex align-items-center" style="background-color: #f4f6f7;">
	<div class="block">
		<%= form_with(model: event, class:"text-lg inline-block my-3 w-72") do |form| %>
			<%= form.check_box :completed,
			                   data: {
				                   id: event.id,
				                   action: "events#toggle"
			                   },
			                   class: "mr-2 align-middle bg-gray-50 border-gray-300 focus:ring-3 focus:ring-blue-300 h-5 w-5 rounded checked:bg-green-500" %>
			<%= event.text %>
		<% end %>
	</div>
</li>

